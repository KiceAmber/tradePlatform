<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>characterEncoding</filter-name>
        <filter-class>com.kice.filter.CharacterEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>characterEncoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- 用户注册-->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.kice.controller.UserRegister</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>

    <!-- 用户登录-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.kice.controller.UserLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/user/login</url-pattern>
    </servlet-mapping>

    <!-- 用户注销-->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.kice.controller.UserLogout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/user/logout</url-pattern>
    </servlet-mapping>

    <!-- 管理员查询所有用户-->
    <servlet>
        <servlet-name>queryAllUser</servlet-name>
        <servlet-class>com.kice.controller.QueryAllUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>queryAllUser</servlet-name>
        <url-pattern>/admin/queryAllUser</url-pattern>
    </servlet-mapping>

    <!-- 管理员查询用户-->
    <servlet>
        <servlet-name>queryUser</servlet-name>
        <servlet-class>com.kice.controller.QueryUserByNameOrId</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>queryUser</servlet-name>
        <url-pattern>/admin/queryUser</url-pattern>
    </servlet-mapping>

    <!-- 管理员查询所有商品-->
    <servlet>
        <servlet-name>queryAllProduct</servlet-name>
        <servlet-class>com.kice.controller.QueryAllProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>queryAllProduct</servlet-name>
        <url-pattern>/admin/queryAllProduct</url-pattern>
    </servlet-mapping>

    <!-- 管理员查询商品-->
    <servlet>
        <servlet-name>queryProduct</servlet-name>
        <servlet-class>com.kice.controller.QueryProductByNameOrSort</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>queryProduct</servlet-name>
        <url-pattern>/admin/queryProduct</url-pattern>
    </servlet-mapping>

    <!-- 管理员查询所有分类-->
    <servlet>
        <servlet-name>queryAllSort</servlet-name>
        <servlet-class>com.kice.controller.QueryAllSort</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>queryAllSort</servlet-name>
        <url-pattern>/admin/queryAllSort</url-pattern>
    </servlet-mapping>

    <!-- 管理员查询分类-->
    <servlet>
        <servlet-name>querySort</servlet-name>
        <servlet-class>com.kice.controller.QuerySortByName</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>querySort</servlet-name>
        <url-pattern>/admin/querySort</url-pattern>
    </servlet-mapping>

    <!-- 个人中心跳转-->
    <servlet>
        <servlet-name>userInfo</servlet-name>
        <servlet-class>com.kice.controller.DisplayUserInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userInfo</servlet-name>
        <url-pattern>/user/info</url-pattern>
    </servlet-mapping>

    <!-- 添加分类-->
    <servlet>
        <servlet-name>addSort</servlet-name>
        <servlet-class>com.kice.controller.AddSort</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addSort</servlet-name>
        <url-pattern>/admin/addSort</url-pattern>
    </servlet-mapping>

    <!-- 删除分类-->
    <servlet>
        <servlet-name>delSort</servlet-name>
        <servlet-class>com.kice.controller.deleteSort</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delSort</servlet-name>
        <url-pattern>/admin/deleteSort</url-pattern>
    </servlet-mapping>






</web-app>